{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@council/tsconfig/base.json",
  "include": ["src", "types.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ESNext",
    "lib": ["ESNext"],
    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "src/*": ["src/*"]
    },
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  }
}
